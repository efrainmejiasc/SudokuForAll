@using SudokuDeTodos.StringResx;
@model SudokuDeTodos.Models.Sistema.Respuesta

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/css/global.css" rel="stylesheet" />
<script src="../Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
<script src="../Content/js/global.js" type="text/javascript"></script>

@{
    ViewBag.Title = "";
}

<div class="divEmail">
    @using (Html.BeginForm("Contact", "Home"))
    {
        <div style="margin-left:10%;">
            <h4 class="text-success"> @Resources.IniciarSesion </h4>
            <label class="checkbox-inline"><input type="checkbox" id="chxNoSoy" name="chxNosoy" required class="btn btn btn-default active" /> @Resources.NoSoyUnRobot </label>
        </div>
        <input type="email" id="email" name="email" placeholder="@Resources.IngreseEmail" required class="boxTxt form-control" />
        <div style="height:6px;"></div>
        <input type="submit" id="sendMail" name="sendMail" value="@Resources.Enviar" class="btn btn-success voton" /><br /><br />

    }
    <br /><br /><br /><br /><br /><br /><br /><br /><br />
        <p style="font-size:smaller;">@Resources.AceptarCondicion</p>
</div>

 
<script>
    $(document).ready(function () {
        OcultarObjeto('entrar');
        OcultarObjeto('traductor');
        OcultarObjeto('equipo');
    });
</script>

