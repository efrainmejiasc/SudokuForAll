@using SudokuDeTodos.StringResx;
@model SudokuDeTodos.Models.Sistema.Respuesta

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/css/global.css" rel="stylesheet" />
<script src="../Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
<script src="../Content/js/global.js" type="text/javascript"></script>
<script src="../Content/js/message.js" type="text/javascript"></script>


@{
    ViewBag.Title = "";
}


@Html.Partial("_Message")
<div class="divEmail">

    <div style="margin-left:10%;">
        <h4 class="text-success"> @Resources.IniciarSesion </h4>
        <label class="checkbox-inline"><input type="checkbox" id="chxNoSoy" name="chxNosoy" class="btn btn btn-default active" required /> @Resources.NoSoyUnRobot </label>
    </div>
    <input type="email" id="email" name="email" placeholder="@Resources.IngreseEmail" class="boxTxt form-control" required />
    <label id="validacionChx" class="validacionField"></label><br />
    <input type="submit" id="sendMail" name="sendMail" value="@Resources.Enviar" class="btn btn-success voton" onclick="VerificarEmail('@Resources.EmailRequerido', '@Resources.ChxRequerido')" /><br /><br />

    <br /><br /><br /><br /><br /><br /><br /><br />
    <p style="font-size:smaller;">@Resources.AceptarCondicion</p>
</div>

 
<script>
    $(document).ready(function () {
        document.documentElement.style.overflowX = 'hidden';
        OcultarObjeto('entrar');
        OcultarObjeto('traductor');
        OcultarObjeto('equipo');
    });
</script>

