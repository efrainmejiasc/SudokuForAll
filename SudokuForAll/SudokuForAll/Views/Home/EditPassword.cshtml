
<script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script type="text/javascript" src="~/Content/js/Global.js"></script>
<link href="~/Content/css/Global.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />


@{
    string chxNosoy = "  No soy un robot";
    ViewBag.Title = "";
}

<h2>Modificacion de contraseña</h2>
<div id="register" align="center" class="register">
    @using (Html.BeginForm("EditPassword", "Home"))
    {
        <h4 class="text-primary" id="lblTexto">Modificar contraseña</h4>
        <input type="email" id="email" name="email" placeholder="Ingrese email" required class="form-control" style="text-align:center;" />
        <input type="password" id="password" name="password" placeholder="Ingrese contraseña" required class="form-control" style="text-align:center;" />
        <input type="password" id="password2" name="password2" placeholder="Confirme contraseña" required class="form-control" style="text-align:center;" /><br />
        <label class="checkbox-inline"><input type="checkbox" id="chxNoSoy" name="chxNosoy" required class="btn btn btn-default active" />@chxNosoy </label><br /><br />
        <input type="submit" id="sendData" name="sendData" value="Enviar" class="btn btn-primary" style="width:13%;" />
        <input type="submit" id="cancel" name="cancel" value="Cancelar" class="btn btn-primary" style="width:13%;" />
    }
</div>
<script>
    OcultarObjeto('traductor');
    OcultarObjeto('entrar');
    OcultarObjeto('olvidoPassword');
    GetEmail();
</script>

