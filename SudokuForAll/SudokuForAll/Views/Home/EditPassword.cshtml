@using SudokuForAll.StringResx;


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<link href="~/Content/css/Global.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="~/Content/js/Global.js" type="text/javascript"></script>




@{
    ViewBag.Title = "";
}

<div id="register" align="center" class="register">
    @using (Html.BeginForm("EditPassword", "Home"))
    {
        <h4 class="text-primary" id="lblTexto">@Resources.ModificarContraseña</h4>
        <input type="email" id="email" name="email" placeholder="@Resources.IngreseEmail" required class="boxTxt form-control" />
        <input type="password" id="password" name="password" placeholder="@Resources.IngreseContraseña" required class="boxTxt form-control" />
        <input type="password" id="password2" name="password2" placeholder="@Resources.ConfirmeContraseña" required class="boxTxt form-control" /><br />
        <label class="checkbox-inline"><input type="checkbox" id="chxNoSoy" name="chxNosoy" required class="btn btn btn-default active" />@Resources.NoSoyUnRobot</label><br /><br />
        <input type="submit" id="sendData" name="sendData" value="@Resources.Enviar" class="voton btn btn-primary" />
        <input type="submit" id="cancel" name="cancel" value="@Resources.Cancelar" class="voton btn btn-primary" />
    }
</div>
<script>
    OcultarObjeto('traductor');
    OcultarObjeto('entrar');
    OcultarObjeto('olvidoPassword');
    GetEmail();
</script>

