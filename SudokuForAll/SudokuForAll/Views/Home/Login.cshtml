@{
    ViewBag.Title = "";
}


<div id="logeo" align="center" class="logeo">
    @using (Html.BeginForm("Login", "Home"))
    {
        <h4 class="text-primary" id="lblTexto">@Resources.Autentificate</h4>
        <input type="email" id="email" name="email" placeholder="@Resources.IngreseEmail" required class="boxTxt form-control"  />
        <input type="password" id="password" name="password" placeholder="@Resources.IngreseContraseña" required class="boxTxt form-control"/><br />
        <label class="checkbox-inline"><input type="checkbox" id="chxNoSoy" name="chxNosoy" required class="btn btn btn-default active" />@Resources.NoSoyUnRobot</label><br /><br />
        <input type="submit" id="sendData" name="sendData" value="@Resources.Enviar" class="votones btn btn-primary"/>
        <input type="submit" id="cancel" name="cancel" value="@Resources.Cancelar" class="votones btn btn-primary" />
    }
    <script>
        OcultarObjeto('entrar');
        OcultarObjeto('traductor');
        GetEmail();
    </script>
</div>

