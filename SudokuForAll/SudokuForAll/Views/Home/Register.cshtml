@using SudokuForAll.StringResx;

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<link href="~/Content/css/Global.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

@{
    ViewBag.Title = "";
}


<div id="register" align="center" class="register">
    @using (Html.BeginForm("Register", "Home"))
    {
        <input type="text" id="nombre" name="nombre" placeholder="@Resources.IngreseNombre" required class="form-control" style="text-align:center;" />
        <input type="text" id="apellido" name="apellido" placeholder="@Resources.IngreseApellido" required class="form-control" style="text-align:center;" />
        <input type="email" id="email" name="email" placeholder="@Resources.IngreseEmail" required class="form-control" style="text-align:center;" />
        <input type="password" id="password" name="password" placeholder="@Resources.IngreseContraseña" required class="form-control" style="text-align:center;" />
        <input type="password" id="password2" name="password2" placeholder="@Resources.ConfirmeContraseña" required class="form-control" style="text-align:center;" /><br />
        <label class="checkbox-inline"><input type="checkbox" id="chxNoSoy" name="chxNosoy" required class="btn btn btn-default active" />@Resources.NoSoyUnRobot</label><br /><br />
        <input type="submit" id="sendData" name="sendData" value="@Resources.Enviar" class="btn btn-primary" style="width:13%;" />
        <input type="submit" id="cancel" name="cancel" value="@Resources.Cancelar" class="btn btn-primary" style="width:13%;" />
    }
</div>
<script>
    OcultarObjeto('traductor');
</script>
