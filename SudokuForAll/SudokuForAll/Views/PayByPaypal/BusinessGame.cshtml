
@model  List<SudokuForAll.Models.DbSistema.Producto>

@{

   ViewBag.Title = "";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<link href="~/Content/css/Global.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="~/Content/js/Global.js" type="text/javascript"></script>


<div id="producto" aling="center">

</div>
<br /><br />
<div aling="center" class="divEmail">

    <div id="tablaProducto">
        <table id="tblAnticipos" class="text-primary table table-bordered table-hover">
            <thead>
                <tr>

                    <th> Producto </th>
                    <th> Codigo </th>
                    <th> Decripcion </th>
                    <th> Fecha Activacion</th>
                    <th> Fecha Expiracion </th>
                    <th> Precio </th>
                    <th> Impuesto % </th>
                    <th> Total </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>  
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Codigo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @DateTime.Now.Date.ToString().Substring(0, 10)
                            </td>
                            <td>
                                @DateTime.Now.AddDays(30).ToString().Substring(0,10)
                            </td>
                             <td>
                               @item.Precio.ToString("N2")
                            </td>
                             <td>
                                 @item.Impuesto.ToString("N2")
                             </td>
                            <td>
                               @{ 
                                 double total =  item.Impuesto * item.Precio / 100;
                                   total = total + item.Precio;
                               }
                                @total.ToString("N2")
                            </td>
                        </tr>
                    }

                }
                else
                {
                    <tr class="tableEmpty">
                        <td colspan="9">
                            No existen productos registrados ...
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br /><br />

