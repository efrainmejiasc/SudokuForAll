<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sudoku para todos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/Global.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <img src="../Content/imagen/logo.png" class="logoInitial" />
                <label class="navbar-brand"> Sudoku para todos </label>
                <ul class="nav navbar-nav">
                    <li id="inicio">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li id="entrar">@Html.ActionLink("Entrar", "Contact", "Home")</li>
                </ul>
                <div id="lenguaje" style="float:right;">
                    <select class="btn-primary btn" data-style="btn-primary">
                        <option value="" disable>Seleccione Lenguaje . . .</option>
                        <option value="1">Español</option>
                        <option value="2">Ingles</option>
                        <option value="2">Portugues</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="navbar-collapse collapse">
                <br />
                <ul class="nav navbar-nav">
                    <li></li>
                    <li><a class="w3-button w3-light-grey w3-block"> copyright&copy;@DateTime.Now.Year - Sudoku para todos</a></li>
                    <li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>
                    <li><a href="http://localhost:49799/Home/EditPasswordNotify">Olvido su contraseña</a></li>
                    <li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>
                    <li></li>
                </ul>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
